<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Slider Properties"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <granite:TabPanel
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/tabs">
                        <items jcr:primaryType="nt:unstructured">
                            <tab1
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Slider Headings"
                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <sliderHeading
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Slider Heading"
                                        name="./sliderHeading"/>
                                    <sliderMainHeading
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Slider Main Heading"
                                        name="./sliderMainHeading"/>
                                    <sliderText
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Slider Text"
                                        name="./sliderText"/>
                                    <footerHeading
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Footer Heading"
                                        name="./footerHeading"/>
                                    <footerButtonText
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Footer Button Text"
                                        name="./footerButtonText"/>
                                    <sliderBackground
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                        allowUpload="true"
                                        autoStart="false"
                                        class="cq-droptarget"
                                        fieldLabel="Slider Background Image"
                                        fileNameParameter="./fileName"
                                        fileReferenceParameter="./sliderBackground"
                                        mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                        multiple="false"
                                        name="./sliderBackground1"
                                        title="Benefits Icon"
                                        uploadUrl="${suffix.path}"
                                        useHTML5="true"/>
                                </items>
                            </tab1>
                            <tab2
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Benefit Content"
                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <sliderMultifield
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                        composite="true"
                                        fieldDescription="Click '+' to add Data"
                                        fieldLabel="Slider Data"
                                        name="./sliderMultifield">
                                        <field
                                            granite:class="cmp-teaser__editor-action"
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                            name="./slider">
                                            <items jcr:primaryType="nt:unstructured">
                                                <cardItem
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <sliderCardHeading
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Slider Card Heading"
                                                            name="./sliderCardHeading"/>
                                                        <sliderCardText
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Slider Card Text"
                                                            name="./sliderCardText"/>
                                                        <sliderCardButtonText
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Slider Card Button Text"
                                                            name="./sliderCardButtonText"/>
                                                        <sliderCardBackground
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                            allowUpload="true"
                                                            autoStart="false"
                                                            class="cq-droptarget"
                                                            fieldLabel="Slider Card Background Image"
                                                            fileNameParameter="./fileName"
                                                            fileReferenceParameter="./sliderCardBackground"
                                                            mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                                            multiple="false"
                                                            name="./sliderCardBackground1"
                                                            title="Benefits Icon"
                                                            uploadUrl="${suffix.path}"
                                                            useHTML5="true"/>
                                                    </items>
                                                </cardItem>
                                            </items>
                                        </field>
                                    </sliderMultifield>
                                </items>
                            </tab2>
                        </items>
                    </granite:TabPanel>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
